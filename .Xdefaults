!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.iconFile:             /usr/share/icons/Numix-Circle/48/apps/utilities-terminal.svg

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
URxvt.urgentOnBell:         true
!URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       2
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           false


urxvt.font: xft:Source Code Pro:pixelsize=11
urxvt.boldFont: xft:Source Code Pro:pixelsize=11

! Fix font space
URxvt.letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher,font-size
URxvt.matcher.button:       1
URxvt.url-launcher:         /home/nick/.bin/scripts/firefox_launch


! Cursor
URxvt.cursorBlink:          true
! URxvt.cursorColor:          #657b83
URxvt.cursorColor:          #FFFFFF
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

URxvt*iso14755: False
URxvt*iso14755_52: False

! Resize font keybinds
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

!! Colors

URxvt*background: #333333
!*background: #002b36
*foreground: #FFFFFF
!*foreground: #657b83
!!*fading: 40
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

!! black dark/light
URxvt.color0: #000000
URxvt.color8: #4C4C4C

!! red dark/light
URxvt.color1: #CD0000
URxvt.color9: #FF0000

!! green dark/light
URxvt.color2: #00CD00
URxvt.color10: #00FF00

!! yellow dark/light
URxvt.color3: #CDCD00
URxvt.color11: #FFFF00

!! blue dark/light
!URxvt.color4: #1E90FF
URxvt.color4: #1882db
URxvt.color12: #4682B4

!! magenta dark/light
URxvt.color5: #CD00CD
URxvt.color13: #FF0808

!! cyan dark/light
URxvt.color6: #00CDCD
URxvt.color14: #569E9E

!! white dark/light
*.color7: #E5E5E5
*.color15: #FFFFFF
