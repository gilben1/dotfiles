[colors]
background = #555555
background-alt = #333333
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #5bb341
alert = #bd2c40

transparent = #00000000

white = #eee
grey = #444444
pink = #d75f87
blue = #4f97d7
purple = #875faf
green = #5bb341
dgreen = #13250e
red = #ee3333

[bar/main]

bottom = true

monitor = ${env:MONITOR:LVDS1}
width = 100%

height = 16
;radius = 6.0

fixed-center = false

foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 8
border-left-size = 2
border-right-size = 2
border-color = #00000000

padding = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Hack:pixelsize=7;1
font-1 = unifont:pixelsize=10;1
font-2 = siji:pixelsize=10;1
font-3 = FontAwesome:pixelsize=10;2
font-4 = Powerline Extra Symbols:pixelsize=12;3

modules-left = right0 i3 right1
modules-center =
modules-right = left0 filesystem left1 xbacklight left2 volume left1 vpnup vpndown left2 wlan eth left1 battery left2 memory left4 cpu left4 temperature left1 date left3

tray-position = right
tray-padding = 2

wm-restack = i3

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-font = 1
label-background = ${colors.background}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = "%{F#5bb341}%mountpoint%%{F-}: %percentage_used%%"
label-mounted-font = 1
label-unmounted = %mountpoint% not mounted
label-unmounted-font = ${self.label-mounted-font}
label-mounted-background = ${colors.background-alt}
label-unmounted-background = ${self.label-mounted-background}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-font = 1
label-focused-background = ${colors.background}
label-focused-underline = ${colors.green}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-font = ${self.label-focused-font}
label-unfocused-background = ${colors.background-alt}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-font = ${self.label-focused-font}
label-visible-background = #111111
label-visible-underline = ${colors.blue}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-font = ${self.label-focused-font}
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}


[module/xbacklight]
type = internal/xbacklight

label =  %percentage%%
label-font = 1
label-background = ${colors.background}

format = <label>

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2

label = CPU %percentage%%
label-font = 1
label-background = ${colors.background-alt}

format-underline = ${colors.purple}

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █


[module/memory]
type = internal/memory
interval = 2

label = RAM %percentage_used%%
label-font = 1
label-background = ${colors.background-alt}

format-underline = ${colors.blue}


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

label-connected = %essid% %signal%%
label-connected-font = 1

format-connected =  <label-connected>
format-connected-underline = #9f78e1
format-connected-background = ${colors.background-alt}

label-disconnected =  
label-disconnected-font = ${self.label-connected-font}

format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
format-disconnected-foreground = ${colors.alert}
format-disconnected-background = ${self.format-connected-background}

[module/eth]
type = internal/network
interface = enp1s0
interval = 3.0

label-connected = %local_ip%

format-connected-underline = #55aa55
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-background = ${colors.background-alt}

format-disconnected =
format-disconnected-background = ${self.format-connected-background}
format-disconnected-underline = ${self.format-connected-underline}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M

label = %date% %time%
label-font = 1
label-background = ${colors.background}

format-prefix = 
format-prefix-background = ${self.label-background}
format-underline = #0a6cf5

[module/volume]
type = internal/volume

label-volume =  %percentage%%
label-volume-font = 1
label-volume-background = ${colors.background-alt}

format-volume = <label-volume>

format-muted-prefix = " "
format-muted-background = ${self.label-volume-background}
format-muted = muted

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

time-format = %H:%M

label-charging = %percentage%% %time%
label-charging-font = 1
label-charging-background = ${colors.background}

format-charging = <animation-charging><label-charging>
format-charging-underline = #ffb52a

label-discharging = %percentage%% %time%
label-discharging-font = ${self.label-charging-font}
label-discharging-background = ${colors.background}

format-discharging = <ramp-capacity><label-discharging>
format-discharging-background = ${colors.background}
format-discharging-underline = ${self.format-charging-underline}

label-full = %percentage%%
label-full-font = ${self.label-charging-font}
label-full-background = ${colors.background}

format-full-prefix= " "
format-full-prefix-background = ${colors.background}

format-full-foreground = ${colors.green}
format-full-underline = ${colors.green}

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "

ramp-capacity-background = ${colors.background}

animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-3 = " "
animation-charging-4 = " "

animation-charging-background = ${colors.background}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 2
warn-temperature = 80

format = <label>
format-background = ${colors.background-alt}
format-underline = ${colors.red}
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-font = 1
label-warn = %temperature%
label-warn-font = ${self.label-font}
label-warn-foreground = ${colors.alert}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/vpnup]
type = custom/script
exec = pgrep openvpn > /dev/null && echo " vpn up"
interval = 5
label = %output%
label-font = 1
format-background = ${colors.background}

click-left = exec ~/.bin/scripts/check_and_run_mcecs_vpn

format-underline = ${colors.green}
format-foreground = ${colors.green}


[module/vpndown]
type = custom/script
exec = ! pgrep openvpn > /dev/null && echo " vpn down"
interval = 5
label = %output%
label-font = 1
format-background = ${colors.background}

click-left = exec ~/.bin/scripts/check_and_run_mcecs_vpn

format-underline = ${colors.red}
format-foreground = ${colors.red}

