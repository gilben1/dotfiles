### Startup / Misc. Settings ###

# Auto disables tapping with touchpad
exec --no-startup-id xinput set-prop "ETPS/2 Elantech Touchpad" "Synaptics Tap Time" 0

focus_follows_mouse no

# Start ssh-add so I don't need to repeatedly enter keys
exec --no-startup-id ssh-add ~/.ssh/id_rsa

# Start compton, compositor (stops screen tearing and whatnot)
exec --no-startup-id compton --config ~/.config/compton.conf -b

# Start authentication agent, so I can update via gui
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1



# Network manager applet
#exec --no-startup-id nm-applet

# Launch update manager for taskbar thing
exec --no-startup-id mintupdate-launcher

# kill old notification daemon and startup dunst
exec killall -q fsnotify_mark
exec --no-startup-id dunst -config ~/.config/dunst/dunstrc


